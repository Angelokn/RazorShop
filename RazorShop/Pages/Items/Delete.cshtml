@page
@model RazorShop.Pages.Items.DeleteModel

<div class="card shadow border-0 mt-4 ">
    <div class="card-header bg-info bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Item</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Item.Id" hidden />
            <div class="border p-3 m-4">
                <div class="mb-3 row p-1 col-12">
                    <label asp-for="Item.Name" class="p-0">Item Name</label>
                    <input disabled asp-for=" Item.Name" class="form-control" />
                    <span asp-validation-for="Item.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Item.Description" class="p-0">Description</label>
                    <input disabled asp-for="Item.Description" class="form-control" />
                    <span asp-validation-for="Item.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Item.Quantity" class="p-0">Quantity</label>
                    <input disabled asp-for="Item.Quantity" class="form-control" />
                    <span asp-validation-for="Item.Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Item.Price" class="p-0">Price</label>
                    <input disabled asp-for="Item.Price" class="form-control" />
                    <span asp-validation-for="Item.Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label disabled asp-for="Item.CategoryId" class="p-0">Category</label>
                    <select disabled asp-for="Item.CategoryId" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-select">

                        <option disabled selected>-- select category --</option>
                    </select>
                    <span asp-validation-for="Item.CategoryId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-secondary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="/items/index" class="btn btn-outline-primary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>