@page
@model RazorShop.Pages.Items.IndexModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Item List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3 col-12">
            <div class="text-end">
                <a asp-page="/items/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>   Create New Item
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.ItemList@* .OrderBy(u => u.Category.DisplayOrder) *@)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>

                        <td class="">
                            @obj.Description
                        </td>
                        <td>
                            @obj.Category.Name
                        </td>
                        <td>
                            @obj.Quantity
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="/items/update" asp-route-id="@obj.Id" class="btn btn-primary mx-2 rounded">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-page="/items/delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2 rounded">
                                    <i class="bi bi-x-circle"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


